                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="98*" />
                                <ColumnDefinition Width="99*" />
                            </Grid.ColumnDefinitions>

                            <DockPanel Grid.Column="0">
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10,10,10,0">

                                    <Button ToolTip="Importiere ein vorhandenes Rezept..." Height="20">
                                        <Image Source="Images/add.png" />
                                    </Button>

                                    <Button ToolTip="Lösche ausgewähltes Rezept aus der Liste" Height="20" Margin="5,0,0,0">
                                        <Image Source="Images/delete.png" />
                                    </Button>
                                </StackPanel>

                                <ListView x:Name="lstRecipe" Margin="10">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.Columns>
                                                <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}" />
                                                <GridViewColumn Header="Sorte" Width="140" DisplayMemberBinding="{Binding Sorte}" />
                                                <GridViewColumn Header="Stammwürze" Width="75" DisplayMemberBinding="{Binding Stammwuerze}" />
                                                <GridViewColumn Header="Alkohol" Width="65" DisplayMemberBinding="{Binding Alkohol}" />
                                            </GridView.Columns>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </DockPanel>

                            <ScrollViewer Grid.Column="1">
                                <StackPanel Orientation="Vertical" Margin="10">
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" />
                                    <TextBlock Text="{Binding Sorte}" HorizontalAlignment="Center" FontSize="14" />
                                    <TextBlock Text="{Binding Ausschlagswuerze, StringFormat='Für {0}l Ausschlagwürze'}" HorizontalAlignment="Center" FontSize="14" />
                                    <TextBlock Text="{Binding Sudhausausbeute, StringFormat='Bei {0}% Sudhausausbeute'}" HorizontalAlignment="Center" FontSize="14" />

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Stammwuerze, StringFormat='Stammwürze: {0}% | '}" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" />
                                        <TextBlock Text="{Binding Bittere, StringFormat='Bittere: {0} IBU | '}" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" />
                                        <TextBlock Text="{Binding Farbe, StringFormat='Farbe: {0} EBC | '}" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" />
                                        <TextBlock Text="{Binding Alkohol, StringFormat='Alkohol: {0} %'}" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" />
                                    </StackPanel>

                                    <TextBlock Text="{Binding Kurzbeschreibung}" HorizontalAlignment="Center" FontSize="14" FontStyle="Italic" TextAlignment="Center" TextWrapping="WrapWithOverflow" />

